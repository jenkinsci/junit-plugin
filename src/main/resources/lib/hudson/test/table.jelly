<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:l="/lib/layout">
    <st:documentation>
        <st:attribute name="items">
            The tests to display inside of this table.
        </st:attribute>
        <st:attribute name="id" use="optional">
            Optional ID for the table.
        </st:attribute>
    </st:documentation>

    <table class="jenkins-table sortable" id="${attrs.id}">
        <thead>
            <tr>
                <th>${%Name}</th>
                <th style="width:4em">${%Duration}</th>
                <j:forEach var="tableheader" items="${it.testActions}">
                    <st:include it="${tableheader}" page="casetableheader.jelly" optional="true" />
                </j:forEach>
                <th />
            </tr>
        </thead>
        <j:forEach var="f" items="${attrs.items}" varStatus="i">
            <tr data-type="test-row">
                <td class="pane no-wrap">
                    <j:set var="url" value="${f.getRelativePathFrom(it)}" />
                    <j:set var="id" value="${h.htmlAttributeEscape(url)}" />

                    <a id="test-${id}-showlink" class="jp-table-row" href="${url}">
                        <l:icon src="${f.status == 'PASSED' ? 'symbol-status-blue' : 'symbol-status-red'}" />

                        ${f.name}

                        <j:if test="${it.class.simpleName eq 'TestResult'}">
                            <span class="jenkins-!-text-color-secondary jenkins-!-margin-left-2" style="font-family: var(--font-family-mono)">
                                <st:out value="${f.className}" />
                            </span>
                        </j:if>

                        <j:if test="${f.age eq 1}">
                            <span class="jenkins-tag jenkins-!-error-color jenkins-!-margin-left-2">
                                ${%New}
                            </span>
                        </j:if>

                        <l:icon src="symbol-chevron-forward-outline plugin-ionicons-api" class="jenkins-!-margin-left-2" />
                    </a>

                    <j:forEach var="badge" items="${f.testActions}">
                        <st:include it="${badge}" page="badge.jelly" optional="true" />
                    </j:forEach>
                </td>
                <td class="no-wrap jenkins-!-text-color-secondary" data="${f.duration}">
                    ${f.durationString}
                </td>
                <j:forEach var="tablerow" items="${f.testActions}">
                    <st:include it="${tablerow}" page="tablerow.jelly" optional="true" />
                </j:forEach>
                <td class="jenkins-table__cell--tight">
                    <div class="jenkins-table__cell__button-wrapper">
                        <a href="${url}" class="jenkins-button jenkins-button--tertiary" tooltip="Open in new tab" target="_blank">
                            <l:icon src="symbol-external" />
                        </a>
                    </div>
                </td>
            </tr>
        </j:forEach>
    </table>
</j:jelly>